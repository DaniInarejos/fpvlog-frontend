{
    "info": {
      "name": "FPV Log - Flights Endpoints",
      "description": "Colecci√≥n de endpoints relacionados con vuelos en FPV Log",
      "version": "1.0.0",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
      "type": "bearer",
      "bearer": [
        {
          "key": "token",
          "value": "{{authToken}}",
          "type": "string"
        }
      ]
    },
    "variable": [
      {
        "key": "baseUrl",
        "value": "http://localhost:3000",
        "type": "string"
      },
      {
        "key": "userId",
        "value": "",
        "type": "string"
      },
      {
        "key": "flightId",
        "value": "",
        "type": "string"
      }
    ],
    "item": [
      {
        "name": "Flights",
        "item": [
          {
            "name": "Create Flight",
            "request": {
              "method": "POST",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/flights",
                "host": ["{{baseUrl}}"],
                "path": ["flights"]
              }
            }
          },
          {
            "name": "Get All Flights",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/flights",
                "host": ["{{baseUrl}}"],
                "path": ["flights"]
              }
            }
          },
          {
            "name": "Get Flight by ID",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/flights/{{flightId}}",
                "host": ["{{baseUrl}}"],
                "path": ["flights", "{{flightId}}"]
              }
            }
          },
          {
            "name": "Update Flight",
            "request": {
              "method": "PATCH",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/flights/{{flightId}}",
                "host": ["{{baseUrl}}"],
                "path": ["flights", "{{flightId}}"]
              }
            }
          },
          {
            "name": "Delete Flight",
            "request": {
              "method": "DELETE",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/flights/{{flightId}}",
                "host": ["{{baseUrl}}"],
                "path": ["flights", "{{flightId}}"]
              }
            }
          },
          {
            "name": "Get User Flights",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/users/{{userId}}/flights",
                "host": ["{{baseUrl}}"],
                "path": ["users", "{{userId}}", "flights"]
              }
            }
          }
        ]
      }
    ]
  }